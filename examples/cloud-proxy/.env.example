# Cloud Proxy Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Anthropic Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# CORS Configuration (Production)
# ============================================
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://app.yourdomain.com
# Use * for development only (not recommended for production)
CORS_ORIGIN=*

# ============================================
# Rate Limiting (Optional)
# ============================================
# Maximum requests per window
RATE_LIMIT_MAX=100

# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# Logging Configuration (Optional)
# ============================================
# Options: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed request logging
LOG_REQUESTS=true

# ============================================
# Model Configuration (Optional)
# ============================================
# Default model for requests without model specified
DEFAULT_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
DEFAULT_OPENAI_MODEL=gpt-4o

# Maximum tokens allowed per request
MAX_TOKENS_LIMIT=4096

# Default timeout for API requests (milliseconds)
API_TIMEOUT=60000

# ============================================
# Security Configuration (Production)
# ============================================
# Optional: Add authentication token that clients must include
# Example: Authorization: Bearer YOUR_PROXY_AUTH_TOKEN
PROXY_AUTH_TOKEN=

# Optional: Allowed API keys (comma-separated) for client authentication
ALLOWED_CLIENT_KEYS=

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Enable usage tracking
ENABLE_USAGE_TRACKING=false

# Database URL for storing usage logs
# DATABASE_URL=postgresql://user:password@localhost:5432/proxy_logs

# ============================================
# Advanced Features (Optional)
# ============================================
# Enable response caching (requires Redis)
ENABLE_CACHING=false
REDIS_URL=redis://localhost:6379

# Enable request queuing for rate limit compliance
ENABLE_QUEUE=false

# Maximum concurrent requests to API
MAX_CONCURRENT_REQUESTS=10
